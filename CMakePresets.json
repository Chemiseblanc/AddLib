{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 20,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}"
            }
        },
        {
            "name": "windows",
            "displayName": "Windows",
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "cl.exe",
                "CPACK_GENERATOR": "ZIP"
            },
            "architecture": {
                "value": "x64",
                "strategy": "external"
            }
        },
        {
            "name": "linux-deb",
            "displayName": "Linux (DEB-Based System)",
            "inherits": "base",
            "cacheVariables": {
                "CPACK_GENERATOR": "TGZ;DEB"
            }
        },
        {
            "name": "linux-rpm",
            "displayName": "Linux (RPM-Based System)",
            "inherits": "base",
            "cacheVariables": {
                "CPACK_GENERATOR": "TGZ;RPM"
            }
        },
        {
            "name": "ci-win",
            "hidden": true,
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "cl.exe"
            },
            "architecture": {
                "value": "x64",
                "strategy": "external"
            }
        },
        {
            "name": "ci",
            "displayName": "Continuous Integration",
            "inherits": [
                "base",
                "ci-win"
            ],
            "cacheVariables": {
                "BUILD_EXAMPLES": "ON"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "release-win",
            "configurePreset": "windows",
            "targets": [
                "package",
                "package_source"
            ]
        },
        {
            "name": "release-deb",
            "configurePreset": "linux-deb",
            "targets": [
                "package",
                "package_source"
            ]
        },
        {
            "name": "release-rpm",
            "configurePreset": "linux-rpm",
            "targets": [
                "package",
                "package_source"
            ]
        }
    ],
    "testPresets": [
        {
            "name": "ci",
            "displayName": "Continuous Integration",
            "configurePreset": "ci"
        }
    ]
}