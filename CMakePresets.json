{
    "version": 4,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 20,
        "patch": 0
    },
    "include": [
        "PlatformPresets.json"
    ],
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}"
            }
        },
        {
            "name": "ci",
            "hidden": true,
            "cacheVariables": {
                "BUILD_EXAMPLES": "ON"
            }
        },
        {
            "name": "windows-latest",
            "displayName": "Release",
            "inherits": [
                "base",
                "windows"
            ],
            "cacheVariables": {
                "CPACK_GENERATOR": "ZIP"
            }
        },
        {
            "name": "ubuntu-latest",
            "displayName": "Release (DEB-Based System)",
            "inherits": [
                "base",
                "linux"
            ],
            "cacheVariables": {
                "CPACK_GENERATOR": "TGZ;DEB"
            }
        },
        {
            "name": "redhat",
            "displayName": "Release (RPM-Based System)",
            "inherits": [
                "base",
                "linux"
            ],
            "cacheVariables": {
                "CPACK_GENERATOR": "TGZ;RPM"
            }
        },
        {
            "name": "ci-windows-latest",
            "displayName": "Testing",
            "inherits": [
                "base",
                "windows",
                "ci"
            ]
        },
        {
            "name": "ci-ubuntu-latest",
            "displayName": "Testing",
            "inherits": [
                "base",
                "linux",
                "ci"
            ]
        }
    ],
    "buildPresets": [
        {
            "name": "release-windows-latest",
            "configurePreset": "windows-latest",
            "inherits": "windows",
            "targets": [
                "package"
            ]
        },
        {
            "name": "release-ubuntu-latest",
            "configurePreset": "ubuntu-latest",
            "inherits": "linux",
            "targets": [
                "package"
            ]
        },
        {
            "name": "release-redhat",
            "configurePreset": "redhat",
            "inherits": "linux",
            "targets": [
                "package"
            ]
        },
        {
            "name": "ci-ubuntu-latest",
            "displayName": "Testing",
            "configurePreset": "ci-ubuntu-latest",
            "inherits": "linux"
        },
        {
            "name": "ci-windows-latest",
            "displayName": "Testing",
            "configurePreset": "ci-windows-latest",
            "inherits": "windows"
        }
    ],
    "testPresets": [
        {
            "name": "ci-ubuntu-latest",
            "displayName": "Testing",
            "configurePreset": "ci-ubuntu-latest",
            "inherits": "linux"
        },
        {
            "name": "ci-windows-latest",
            "displayName": "Testing",
            "configurePreset": "ci-windows-latest",
            "inherits": "windows"
        }
    ]
}